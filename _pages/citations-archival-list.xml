---
layout: null
permalink: /citations-archival-list.xml
sitemap: true
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
{% assign posts = site.posts %}
{% for post in posts %}
	{% assign slug = post.url | split: '/' | last %}
	{% assign ris_path = '/assets/citations/' | append: slug | append: '.ris' %}
	<url>
		<loc>{{ site.url | append: site.baseurl | append: ris_path | xml_escape }}</loc>
		<lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
	</url>
	{% assign csl_path = '/assets/citations/' | append: slug | append: '.csl.json' %}
	<url>
		<loc>{{ site.url | append: site.baseurl | append: csl_path | xml_escape }}</loc>
		<lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
	</url>
{% endfor %}
</urlset>
